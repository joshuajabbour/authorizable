{
    "name": "joshuajabbour/authorizable",
    "description": "A flexible authorization component.",
    "license": "MIT",
    "keywords": [
        "authorization",
        "authorize",
        "security",
        "access",
        "role",
        "permission",
        "ability",
        "allow",
        "deny",
        "can",
        "acl",
        "rbac",
        "authority",
        "laravel",
        "laravel 4"
    ],
    "authors": [
        {
            "name": "Joshua Jabbour",
            "email": "code@joshuajabbour.com"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "illuminate/support": "4.1.*"
    },
    "require-dev": {
        "phpunit/phpunit": "4.0.*",
        "mockery/mockery": "0.9.*"
    },
    "suggest": {
        "illuminate/translation": "Allows for translatable messages."
    },
    "autoload": {
        "psr-4": {
            "JoshuaJabbour\\Authorizable\\": "src",
            "JoshuaJabbour\\Authorizable\\Tests\\": "tests",
            "JoshuaJabbour\\Authorizable\\Laravel\\": "src/Support/Laravel/src"
        }
    },
    "minimum-stability": "stable"
}
